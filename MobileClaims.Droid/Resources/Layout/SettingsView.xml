<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:id="@+id/settings_view"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <gsc.HeaderTextView
        android:id="@+id/settingsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/mysettings"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="true" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">
            <TextView
                android:id="@+id/setting_name"
                android:text="@string/fingerprintSetting"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_marginLeft="20dp" />
            <Switch
                android:id="@+id/setting_value"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@id/setting_name"
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                layout_gravity="center_vertical"
                android:layout_alignParentRight="true"
                local:MvxBind="Checked UseBiometricsSetting"
                android:textOn="@string/switch_yes"
                android:textOff="@string/switch_no"
                android:onClick="setting_value_click_handler"
			    style="@style/SwitchAppTheme"/>
        </RelativeLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            <gsc.NunitoTextView
                android:id="@+id/setting_para_1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textSize="20dp"
                android:layout_centerInParent="false"
                android:text="@string/fingerprintSettingPara1"
                android:layout_gravity="left"
                android:gravity="left"
                android:layout_marginTop="20dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            <gsc.NunitoTextView
                android:id="@+id/setting_para_2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textSize="20dp"
                android:layout_centerInParent="true"
                android:text="@string/fingerprintSettingPara2"
                android:layout_gravity="left"
                android:gravity="left"
                android:layout_marginTop="20dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            <gsc.NunitoTextView
                android:id="@+id/setting_para_3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textSize="20dp"
                android:layout_centerInParent="true"
                android:text="@string/fingerprintSettingPara3"
                android:layout_gravity="left"
                android:gravity="left"
                android:layout_marginTop="20dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>