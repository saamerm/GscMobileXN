<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
	<LinearLayout
		android:id="@+id/borderLinearLayout"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="86dp"
		android:background="@drawable/border_red"
		android:padding="8dp">
		<TextView
			android:id="@+id/actionRequriedTextView"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/actionRequired"
			android:textSize="12sp"
			android:textColor="@color/dark_red"/>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:weightSum="1.0">
			<TextView
				android:id="@+id/claimDateTextView"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="0.5"
				android:textSize="12sp"
				android:text="12/12/2018"/>
				<TextView
				android:id="@+id/claimFormNumberTextView"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="0.5"
				android:gravity="end"
				android:textSize="12sp"
				android:text="4312312"/>
		</LinearLayout>
		<TextView
			android:id="@+id/claimTypeTextView"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Acupuncture"
			android:textStyle="bold"/>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:weightSum="1.0">
			<TextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="0.6"
				android:textSize="12sp"
				android:text="@string/claimedAmount"/>
				<TextView
				android:id="@+id/claimSumTextView"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="0.4"
				android:gravity="end"
				android:textSize="12sp"
				android:text="$122"/>
		</LinearLayout>
	</LinearLayout>
	<View
		android:layout_width="match_parent"
		android:layout_height="10dp" />
</LinearLayout>
