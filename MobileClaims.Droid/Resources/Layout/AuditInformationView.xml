<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background_color">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scrollbars="none"
            android:isScrollContainer="true">
            <gsc.HeaderTextView
                android:id="@+id/myAlertclaimResultTitleLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/myAlertclaimResultTitleLabel"
                android:layout_gravity="center"
                android:gravity="center"
                android:textAllCaps="true"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scrollbars="none"
                android:background="@color/light_grey"
                android:layout_margin="20dp">
                <gsc.TitleTextView
                    android:id="@+id/claimResultAuditNotification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:text="@string/claimResultAuditNotificationMsgHeader"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textAllCaps="true" />
                <gsc.NunitoTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:textSize="13sp"
                    android:text="@string/myAlertclaimResultAuditNotificationMsg"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textAllCaps="true" />
                <gsc.GSCButton
                    android:text="@string/claimResultAuditNotificationInstructionLabel"
                    android:background="@drawable/ButtonBackground"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/claimResultAuditNotificationBtn"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textColorHighlight="@color/list_text_color"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp" />
            </LinearLayout>
        <!-- Plan details -->
            <gsc.TitleTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/auditPlanInfoLabel"
                android:layout_gravity="left"
                android:gravity="left"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textAllCaps="true" />
            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="10dp">
                <TableRow
                    android:layout_marginBottom="10dp"
                    android:weightSum="1">
                    <gsc.NunitoTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:id="@+id/benefitSubmissionGSIDNocolonLabel"
                        android:layout_gravity="left"
                        android:gravity="left"
                        android:layout_weight="0.5"
                        android:textSize="16sp"
                        android:layout_marginLeft="20dp"
                        android:layout_centerVertical="true"
                        android:textAllCaps="true" />
                    <gsc.NunitoTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_weight="0.5"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="20dp"
                        android:layout_centerVertical="true"
                        local:MvxBind="Text ClaimResult.PlanMemberDisplayID;" />
                </TableRow>
                <TableRow
                    android:layout_marginBottom="10dp"
                    android:weightSum="1">
                    <gsc.NunitoTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:text="@string/claimSubmissionParticipantLabel"
                        android:layout_gravity="left"
                        android:gravity="left"
                        android:textSize="16sp"
                        android:layout_weight="0.5"
                        android:layout_marginLeft="20dp"
                        android:layout_centerVertical="true"
                        android:textAllCaps="true" />
                    <gsc.NunitoTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_weight="0.5"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="20dp"
                        android:layout_centerVertical="true"
                        local:MvxBind="Text ClaimResult.ParticipantFullName;" />
                </TableRow>
                <TableRow
                    android:layout_marginBottom="0dp"
                    android:weightSum="1">
                    <gsc.NunitoTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:text="@string/claimResultSubmissionDateLabel"
                        android:layout_gravity="left"
                        android:gravity="left"
                        android:textSize="16sp"
                        android:layout_weight="0.5"
                        android:layout_marginLeft="20dp"
                        android:layout_centerVertical="true"
                        android:textAllCaps="true" />
                    <gsc.NunitoTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_weight="0.5"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="20dp"
                        android:layout_centerVertical="true"
                        local:MvxBind="Text ClaimResult.SubmissionDate;" />
                </TableRow>
            </TableLayout>
            <Mvx.MvxLinearLayout
                android:layout_marginTop="0dp"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:dividerHeight="0dp"
                local:MvxBind="ItemsSource ClaimResult.ClaimResultDetails;"
                local:MvxItemTemplate="@layout/item_audit_claim_result_view" />
            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TableRow
                    android:layout_marginBottom="10dp"
                    android:weightSum="1">
                    <gsc.NunitoTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:text="@string/claimResultTotalsLabel"
                        android:layout_gravity="left"
                        android:gravity="left"
                        android:layout_weight="0.5"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="20dp"
                        android:layout_centerVertical="true"
                        android:textAllCaps="true" />
                    <gsc.NunitoTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_weight="0.5"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="20dp"
                        android:layout_centerVertical="true"
                        local:MvxBind="Text Format('${0}',ClaimResult.ClaimedAmountTotal);" />
                </TableRow>
            </TableLayout>
            <gsc.GSCButton
                android:id="@+id/doneBtn"
                android:text="@string/auditDone"
                android:background="@drawable/ButtonBackground"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:textColor="@drawable/ButtonTextColor"
                android:gravity="center"
                android:textSize="24sp"
                android:textColorHighlight="@color/list_text_color"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>