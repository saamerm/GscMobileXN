<?xml version="1.0" encoding="utf-8"?>
<gsc.CheckableLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:duplicateParentState="true"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:gravity="center_vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="@drawable/single_audit_select_item_background">
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:duplicateParentState="true">
        <TableRow
            android:weightSum="1.2"
            android:duplicateParentState="true">
            <gsc.NunitoTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:textColor="@drawable/gsc_list_text_color"
                android:duplicateParentState="true"
                android:textColorHighlight="@color/white"
                android:textSize="18sp"
                android:layout_gravity="left"
                android:gravity="left"
                android:layout_weight="0.4"
                local:MvxBind="Text ClaimFormID" />
            <gsc.NunitoTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@drawable/gsc_list_text_color"
                android:duplicateParentState="true"
                android:textColorHighlight="@color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:gravity="left"
                android:layout_weight="0.4"
                local:MvxBind="Text Format('{0:MMM dd yyyy}',SubmissionDate);" />
            <gsc.NunitoTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@drawable/gsc_list_text_color"
                android:duplicateParentState="true"
                android:textColorHighlight="@color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:gravity="left"
                android:layout_weight="0.4"
                local:MvxBind="Text Format('{0:MMM dd yyyy}',DueDate);" />
        </TableRow>
    </TableLayout>
<!--</LinearLayout> -->
</gsc.CheckableLinearLayout>