<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginTop="15dp">
    <TableRow
        android:layout_marginTop="5dp"
        android:weightSum="1">
        <gsc.NunitoTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/claimResultServiceDateLabel"
            android:layout_gravity="left"
            android:gravity="left"
            android:textSize="16sp"
            android:layout_weight="0.5"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:textAllCaps="true"
            local:MvxBind="Visibility InvertedVisibility(HasHCSADetails);" />
        <gsc.NunitoTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/claimResultExpenseDateLabel"
            android:layout_gravity="left"
            android:gravity="left"
            android:textSize="16sp"
            android:layout_weight="0.5"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:textAllCaps="true"
            local:MvxBind="Visibility Visibility(HasHCSADetails);" />
        <gsc.NunitoTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_weight="0.5"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            local:MvxBind="Text Format('{0:MMMM dd, yyy}',ServiceDate);" />
    </TableRow>
    <TableRow
        android:layout_marginTop="5dp"
        android:weightSum="1">
        <gsc.NunitoTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/claimResultServiceDescriptionLabel"
            android:layout_gravity="left"
            android:gravity="left"
            android:textSize="16sp"
            android:layout_weight="0.5"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:textAllCaps="true"
            local:MvxBind="Visibility InvertedVisibility(HasHCSADetails);" />
        <gsc.NunitoTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="@string/claimResultTypeOfExpenseLabel"
            android:layout_gravity="left"
            android:gravity="left"
            android:textSize="16sp"
            android:layout_weight="0.5"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:textAllCaps="true"
            local:MvxBind="Visibility Visibility(HasHCSADetails);" />
        <gsc.NunitoTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_weight="0.5"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            local:MvxBind="Text ServiceDescription;" />
    </TableRow>
    <TableRow
        android:layout_marginTop="5dp"
        android:weightSum="1">
        <gsc.NunitoTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/claimResultClaimedAmountLabel"
            android:layout_gravity="left"
            android:gravity="left"
            android:textSize="16sp"
            android:layout_weight="0.5"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:textAllCaps="true" />
        <gsc.NunitoTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_weight="0.5"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            local:MvxBind="Text Format('${0}',ClaimedAmount);" />
    </TableRow>
</TableLayout>