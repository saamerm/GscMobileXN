<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background_color">
            <gsc.HeaderTextView
                android:id="@+id/claim_service_provider_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/claimServiceProvidersTitle"
                android:layout_gravity="center"
                android:gravity="center"
                android:textAllCaps="true" />
            <gsc.SubtitleTextView
                android:id="@+id/claim_service_provider_select_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="left"
                android:gravity="left"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textAllCaps="true" 
				android:text="@string/claimServiceProviderSelectTitle"/>
        <LinearLayout
            android:id="@+id/linearListLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <gsc.SingleSelectMvxListView
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:id="@+id/claim_type_list"
                android:scrollbarStyle="outsideOverlay"
                android:choiceMode="singleChoice"
                android:cacheColorHint="@android:color/transparent"
                android:background="@android:color/transparent"
                android:divider="@android:color/transparent"
                android:dividerHeight="15dp"
                android:listSelector="@android:color/transparent"
                local:MvxBind="ItemsSource ServiceProviders;SelectedItem SelectedServiceProvider; ItemClick ServiceProviderSelectedCommand"
                local:MvxItemTemplate="@layout/item_claim_provider_type"
                android:transcriptMode="alwaysScroll"
                android:layout_marginTop="10dp" />
        </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/white">
                <gsc.SubtitleTextView
                    android:id="@+id/lookupProviderByNameLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/lookupProviderByNameLabel"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:layout_marginLeft="0dp"
                    android:textAllCaps="true" />
                <gsc.SmallEditText
                    android:id="@+id/lookupProviderByInintialValue"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="0"
                    android:layout_centerInParent="true"
                    android:textSize="13sp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/dark_grey"
                    android:singleLine="true"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/RoundEditTextNone"
                    android:layout_marginBottom="10dp"
                    android:includeFontPadding="true"
                    android:layout_marginTop="10dp"
                    android:gravity="left|center"
                    android:hint="@string/lookupProviderByInitialLabel"
                    local:MvxBind="Text Initial"
                    android:paddingLeft="10dp" />
                <gsc.SmallEditText
                    android:id="@+id/lookupProviderByLastNameValue"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="0"
                    android:layout_centerInParent="true"
                    android:textSize="13sp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/dark_grey"
                    android:singleLine="true"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/RoundEditTextNone"
                    android:layout_marginBottom="10dp"
                    android:includeFontPadding="true"
                    android:layout_marginTop="10dp"
                    android:gravity="left|center"
                    android:hint="@string/lookupProviderByLastNameLabel"
                    local:MvxBind="Text LastName"
                    android:paddingLeft="10dp"
                    android:imeOptions="actionDone" />
                <gsc.GSCButton
                    android:text="@string/searchByNameLabel"
                    android:background="@drawable/ButtonBackground"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/searchByNameBtn"
                    android:layout_gravity="center"
                    android:textColor="@drawable/ButtonTextColor"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:layout_marginTop="10dp"
                    android:textAllCaps="true" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/linearLayout2">
                <gsc.SubtitleTextView
                    android:id="@+id/lookupProviderByPhoneLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="@string/lookupProviderByPhoneLabel"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:layout_marginLeft="0dp"
                    android:textAllCaps="true" />
                <gsc.SmallEditText
                    android:id="@+id/lookupProviderByPhoneValue"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="0"
                    android:layout_centerInParent="true"
                    android:textSize="13sp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/dark_grey"
                    android:singleLine="true"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/RoundEditTextNone"
                    android:layout_marginBottom="10dp"
                    android:includeFontPadding="true"
                    android:layout_marginTop="10dp"
                    android:hint="@string/phoneNumberLabel"
                    android:gravity="left|center"
                    local:MvxBind="Text PhoneNumber"
                    android:paddingLeft="10dp"
                    android:imeOptions="actionDone" />
                <gsc.GSCButton
                    android:text="@string/searchByPhoneLabel"
                    android:background="@drawable/ButtonBackground"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/searchByPhoneBtn"
                    android:layout_gravity="center"
                    android:textColor="@drawable/ButtonTextColor"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:layout_marginTop="10dp"
                    android:textAllCaps="true" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>