<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/menu_item_height"
    android:layout_marginBottom="10dp">

    <ImageView
        android:id="@+id/menuIconImageView"
        android:layout_width="@dimen/menu_item_width"
        android:layout_height="match_parent"
        android:background="@color/light_grey"
        android:padding="@dimen/menu_item_icon_padding" />

    <View
        android:layout_width="8dp"
        android:layout_height="match_parent"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_grey"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/menuIconLabelTextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:lineSpacingMultiplier="0.9"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="@color/highlight_color"
            android:textSize="@dimen/menu_item_text_size" />

        <TextView
			android:id="@+id/menuItemsCountLabel"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bg_rounded_darkred"
            android:gravity="center"
            android:minWidth="28dp"
            android:textColor="@color/light_grey"
            android:textSize="@dimen/menu_item_count_text_size" />

    </LinearLayout>

</LinearLayout>