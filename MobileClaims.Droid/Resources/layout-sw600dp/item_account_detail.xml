<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:stretchColumns="2">
        <TableRow>
            <TextView
                android:id="@+id/txtAccountAsStringtxt"
                android:textColor="@color/spa_cont_txt_lgt"
                android:textSize="@dimen/spa_cntrbution_sub_txt"
                android:padding="5dip"
                android:layout_weight="1.0"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:text="@string/accountTitle"
                android:gravity="left" />
            <TextView
                android:id="@+id/txtDepositeAsStringtxt"
                android:textColor="@color/spa_cont_txt_lgt"
                android:textSize="@dimen/spa_cntrbution_sub_txt"
                android:padding="5dip"
                android:layout_weight="1.0"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:gravity="right" />
            <TextView
                android:id="@+id/txtUsedToAsStringtxt"
                android:text="@string/usedToDate"
                android:textColor="@color/spa_cont_txt_lgt"
                android:textSize="@dimen/spa_cntrbution_sub_txt"
                android:padding="5dip"
                android:layout_weight="1.0"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:gravity="right" />
            <TextView
                android:id="@+id/txtRemainingAsStringtxt"
                android:text="@string/remaining"
                android:textColor="@color/spa_cont_txt_lgt"
                android:textSize="@dimen/spa_cntrbution_sub_txt"
                android:padding="5dip"
                android:layout_weight="1.0"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:gravity="right" />
        </TableRow>
        <TableRow>
            <View
                android:id="@+id/line_separatord"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="16dp"
                android:layout_weight="1.0"
                android:layout_width="0dp"
                android:layout_height="@dimen/separator_height"
                android:background="@color/highlight_color" />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/txtAccountName"
                android:padding="5dip"
                android:textColor="@color/spa_cont_txt"
                android:textSize="@dimen/spa_cntrbution_sub_txt_header"
                android:layout_weight="1.0"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:gravity="left"
                local:MvxBind="Text AccountName" />
            <mobileclaims.droid.DollarSignTextView
                android:id="@+id/txtDepositeAsString"
                android:textColor="@color/highlight_color"
                android:textSize="@dimen/spa_cntrbution_txt"
                android:padding="5dip"
                android:layout_weight="1.0"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:gravity="right" />
            <mobileclaims.droid.DollarSignTextView
                android:id="@+id/txtUsedToAsString"
                android:textColor="@color/spa_cont_txt"
                android:textSize="@dimen/spa_cntrbution_txt"
                android:padding="5dip"
                android:layout_weight="1.0"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:gravity="right" />
            <mobileclaims.droid.DollarSignTextView
                android:id="@+id/txtRemainingAsString"
                android:textColor="@color/highlight_color"
                android:textSize="@dimen/spa_cntrbution_txt"
                android:padding="5dip"
                android:layout_weight="1.0"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:gravity="right" />
        </TableRow>
    </TableLayout>
    <LinearLayout
        android:padding="5dip"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtForteited"
            android:textColor="@color/spa_cont_txt_lgt"
            android:textSize="@dimen/spa_cntrbution_sub_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left" />
        <TextView
            android:id="@+id/txtEndDateAsString"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/spa_cntrbution_sub_date"
            android:textColor="@color/spa_cont_txt"
            android:layout_gravity="left"
            android:gravity="left" />
        <TextView
            android:id="@+id/txtEndDateAsStringDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/spa_cntrbution_sub_date"
            android:textColor="@color/spa_cont_txt"
            android:gravity="left" />
    </LinearLayout>
</LinearLayout>