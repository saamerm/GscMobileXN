<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:local="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:background="@color/white"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:scrollbars="none">
		<include
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			layout="@layout/directdepositheaderlayout"
			android:id="@+id/include1" />
		<LinearLayout
			android:layout_width="match_parent"
			android:background="#F2F2F2"
			android:layout_marginTop="22.5dp"
			android:layout_marginBottom="24.5dp"
			android:layout_height="1dp"/>
		<LinearLayout
			android:id="@+id/ConsentLayout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="20dp"
			android:layout_marginRight="20dp"
			android:layout_marginBottom="26dp"
			android:background="@drawable/customborder"
			android:orientation="horizontal">
			<ImageView
				android:id="@+id/ConsentIndicator"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="20.5dp" />
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:gravity="left"
				android:text="I acknowledge that it is my responsibility to ensure the accuracy of my banking details and that GSC accepts no responsibility and cannot be held liable if any information provided is incorrect, incomplete, or inaccurate."
				android:paddingRight="4dp"
				android:fontFamily="@font/nunitosansregular"			
				android:textColor="#1B1B1B"
				android:textSize="14sp"
				local:MvxBind="Text AuthoriseDepositFundLabel" />
		</LinearLayout>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingLeft="22dp"
			android:fontFamily="@font/nunitosansblack"
			android:textColor="@color/brand_color"
			android:textSize="14sp"
			local:MvxBind="Text BankInfoTitle"
			android:text="Bank Account Information"/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingTop="22dp"
			android:paddingLeft="22dp"
			android:textSize="14sp"
			android:textColor="#555555"
			local:MvxBind="Text TransitNumberTitle"
			android:fontFamily="@font/nunitosansregular"
			android:text="Transit Number"/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingLeft="22dp"
			android:textSize="14sp"
			android:textColor="@color/black"
			local:MvxBind="Text TransitNumber"
			android:fontFamily="@font/nunitosansblack"
			android:text="12345"/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingTop="22dp"
			android:textSize="14sp"
			android:textColor="#555555"
			local:MvxBind="Text BankNumberTitle"
			android:fontFamily="@font/nunitosansregular"
			android:paddingLeft="22dp"
			android:text="Bank Number"/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingLeft="22dp"
			android:paddingRight="22dp"
			local:MvxBind="Text BankNumberWithName"
			android:textSize="14sp"
			android:textColor="@color/black"
			android:fontFamily="@font/nunitosansblack"
			android:text="12345 - asf asf asf as as fs af a sf as fasfadsg sdg sdg sdgsdgsd gsdfsdfsd
sfasf"/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingTop="22dp"
			android:paddingLeft="22dp"
			android:textSize="14sp"
			local:MvxBind="Text AccountNumberTitle"
			android:textColor="#555555"
			android:fontFamily="@font/nunitosansregular"
			android:text="Account Number"/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingLeft="22dp"
			local:MvxBind="Text AccountNumber"
			android:textSize="14sp"
			android:textColor="@color/black"
			android:fontFamily="@font/nunitosansblack"
			android:text="12345"/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="22dp"
			android:textSize="14sp"
			android:fontFamily="@font/nunitosansregular"
			android:text="Click CONFIRM if the information you submitted is correct. If you would like to make changes, please click CHANGE INFORMATION."
			android:id="@+id/textView1"
			local:MvxBind="Text NoteConfirmationLabel"
			android:textColor="#6B6B6B"
			/>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingTop="75dp"
			android:paddingLeft="14dp"
			android:paddingRight="14dp"
			android:paddingBottom="50dp"
			android:orientation="horizontal">
			<Button
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:fontFamily="@font/leaguegothic"
				android:layout_marginRight="3.5dp"
				android:textColor="@color/white"
				android:textSize="20sp"
				android:lines="1"
                android:autoSizeMaxTextSize="20sp"                
                android:layout_gravity="center_vertical"
                android:autoSizeTextType="uniform"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
				android:background="@color/brand_color"
				local:MvxBind="Text ChangeInformationTitle; Click ChangeInformationCommand"
				android:text="CHANGE INFORMATION"/>
			<Button
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:textSize="20sp"
				android:lines="1"
                android:autoSizeMaxTextSize="20sp"                
                android:layout_gravity="center_vertical"
                android:autoSizeTextType="uniform"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
				android:fontFamily="@font/leaguegothic"
				android:textColor="@color/white"
				android:background="@color/brand_color"
				android:layout_marginLeft="3.5dp"
				local:MvxBind="Text ContinueTitle; Click ContinueCommand"
				android:text="CONTINUE"/>
		</LinearLayout>
	</LinearLayout>
</ScrollView>