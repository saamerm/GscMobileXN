<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:local="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:layout_marginBottom="10dp">
	<gsc.NunitoTextView
    android:id="@+id/auditClaimNumberXof"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="10sp"
    android:textColor="@color/black"
    android:textStyle="bold"
	android:text="Claim 1 of 3"
	android:layout_marginBottom="10dp"/>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:weightSum="1.0"
      android:layout_marginBottom="15dp">
    <gsc.NunitoTextView
      android:layout_width="0dp"
      android:layout_weight="0.5"
      android:layout_height="wrap_content"
      android:textSize="13sp"
      android:textColor="@color/claim_text"
      android:text="@string/serviceDate"/>
    <gsc.NunitoTextViewBold
	  android:id="@+id/auditClaimServiceData"
      android:layout_width="0dp"
      android:layout_weight="0.5"
      android:layout_height="wrap_content"
      android:textColor="@color/claim_text_grey"
      android:textSize="12sp"/>
  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:weightSum="1.0"
      android:layout_marginBottom="15dp">
    <gsc.NunitoTextView
      android:layout_width="0dp"
      android:layout_weight="0.5"
      android:layout_height="wrap_content"
      android:textSize="13sp"
      android:textColor="@color/claim_text"
      android:text="@string/serviceDescription"/>
    <gsc.NunitoTextViewBold
	  android:id="@+id/auditClaimServiceDescription"
      android:layout_width="0dp"
      android:layout_weight="0.5"
      android:layout_height="wrap_content"
      android:textColor="@color/claim_text_grey"
      android:textSize="12sp"/>
  </LinearLayout>
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1.0"
    android:layout_marginBottom="15dp">
    <gsc.NunitoTextView
      android:layout_width="0dp"
      android:layout_weight="0.5"
      android:layout_height="wrap_content"
      android:textSize="13sp"
      android:textColor="@color/claim_text"
      android:text="@string/claimedAmount"/>
    <gsc.NunitoTextViewBold
	  android:id="@+id/auditClaimClaimedAmount"
      android:layout_width="0dp"
      android:layout_weight="0.5"
      android:layout_height="wrap_content"
      android:textColor="@color/claim_text_grey"
      android:textStyle="bold"
      android:textSize="12sp"/>
  </LinearLayout>
</LinearLayout>