<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background_color">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scrollbars="none"
            android:isScrollContainer="true">
            <gsc.HeaderTextView
                android:id="@+id/claimResultTitleLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/eligibilityInquiryTitle"
                android:layout_gravity="center"
                android:gravity="center"
                android:textAllCaps="true"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal" />
            <gsc.NunitoTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/eligibilityInquirySubTitle1"
                android:layout_gravity="center"
                android:gravity="left"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textAllCaps="true" />
            <gsc.NunitoTextView
                android:text="@string/eligibilityInquirySubTitle2"
                android:textColor="@color/red"
                android:textSize="14dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="0.9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left" />
            <gsc.NunitoTextView
                android:text="@string/eligibilityInquiryToFieldLabel"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="0.9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left" />
            <gsc.NunitoTextView
                android:text="@string/eligibilityInquiryFromFieldLabel"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="0.9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left" />
            <gsc.NunitoTextView
                android:text="@string/eligibilityInquiryEmailFieldLabel"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="0.9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left" />
            <gsc.NunitoTextView
                android:text="@string/eligibilityInquiryDisclaimerFieldLabel"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="0.9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left" />
            <gsc.TitleTextView
                android:id="@+id/claimResultTitleLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/eligibilityInquiryTitle"
                android:layout_gravity="center"
                android:gravity="center"
                android:textAllCaps="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal" />
            <gsc.SingleSelectMvxListView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/claim_participant"
                android:scrollbarStyle="outsideOverlay"
                android:cacheColorHint="@android:color/transparent"
                android:background="@android:color/transparent"
                android:divider="@android:color/transparent"
                android:dividerHeight="10dp"
                android:listSelector="@android:color/transparent"
                local:MvxBind="ItemsSource SelectedParticipants;"
                local:MvxItemTemplate="@layout/item_eligibility_participant_list" />
            <gsc.NunitoTextView
                android:text="@string/eligibilityInquiryDisclaimerField2Label"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="0.9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left" />
            <gsc.NunitoTextView
                android:text="@string/eligibilityInquiryEnterInquiryLabel"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="0.9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left" />
            <gsc.SmallEditText
                android:id="@+id/inquiryText"
                android:layout_weight="0"
                android:textSize="14dp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/dark_grey"
                android:inputType="textMultiLine"
                android:lines="8"
                android:minLines="6"
                android:gravity="top|left"
                android:maxLines="10"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:scrollbars="vertical"
                local:MvxBind="Text InquiryText"
                android:layout_marginBottom="5dp" />
            <gsc.NunitoTextView
                android:text="@string/eligibilityInquiryDisclaimerField3Label"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="0.9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left" />
            <gsc.GSCButton
                android:text="Submit Enquiry"
                android:background="@drawable/ButtonBackground"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                local:MvxBind="Click SubmitBenefitInquiryCommand;"
                android:layout_gravity="center"
                android:textColor="@drawable/ButtonTextColor"
                android:gravity="center"
                android:textSize="18dp"
                android:textColorHighlight="@color/list_text_color"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp" />
            <gsc.GSCButton
                android:text="Cancel Enquiry"
                android:background="@drawable/ButtonBackground"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                local:MvxBind="Click CancelBenefitInquiryCommand;"
                android:layout_gravity="center"
                android:textColor="@drawable/ButtonTextColor"
                android:gravity="center"
                android:textSize="18dp"
                android:textColorHighlight="@color/list_text_color"
                android:layout_marginBottom="5dp" />
            <gsc.GSCButton
                android:text="Submit another Enquiry"
                android:background="@drawable/ButtonBackground"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                local:MvxBind="Click SubmitAnotherEligibilityCheckCommand;"
                android:layout_gravity="center"
                android:textColor="@drawable/ButtonTextColor"
                android:gravity="center"
                android:textSize="18dp"
                android:textColorHighlight="@color/list_text_color"
                android:layout_marginBottom="5dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>