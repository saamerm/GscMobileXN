    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/plus_select_item_background">
        <TableRow
            android:layout_marginTop="2dp">
            <gsc.NunitoTextView
                android:text="Dep. No: Participant"
                android:textColor="@drawable/plus_gsc_list_text_color"
                android:textColorHighlight="@color/white"
                android:textSize="14dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="0.9"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:gravity="left" />
            <gsc.NunitoTextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textStyle="bold"
                android:textColor="@drawable/plus_gsc_list_text_color"
                android:textColorHighlight="@color/white"
                android:textSize="14sp"
                android:layout_weight="0.1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                local:MvxBind="Text Format('{0}: {1}',ParticipantNumber, ParticipantFullName);" />
        </TableRow>
        <TableRow
            android:layout_marginTop="2dp">
            <gsc.NunitoTextView
                android:text="Orthotic"
                android:textColor="@drawable/plus_gsc_list_text_color"
                android:textColorHighlight="@color/white"
                android:textSize="14dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="0.9"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:gravity="left" />
            <gsc.NunitoTextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textStyle="bold"
                android:textColor="@drawable/plus_gsc_list_text_color"
                android:textColorHighlight="@color/white"
                android:textSize="14sp"
                android:layout_weight="0.1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                local:MvxBind="Text Format('{0}',OrthoticEligibilityDateFormatted);" />
        </TableRow>
    </TableLayout>
</gsc.CheckableLinearLayout>