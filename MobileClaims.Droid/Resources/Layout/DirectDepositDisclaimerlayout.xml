<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:id="@+id/DisclaimerLinearLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp">
    <gsc.NunitoTextView
        android:id="@+id/DisclaimerText1"
        android:layout_width="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"        
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="left"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:text="@string/disclaimer3"
        local:MvxBind="Text DiscalimerNote1" />
    <gsc.NunitoTextView
        android:id="@+id/DisclaimerText2"
        android:layout_below="@id/DisclaimerText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="14dp"        
        android:gravity="left"
        android:textColor="@color/black"
        android:text="@string/disclaimer3"        
        android:textSize="14sp"
        local:MvxBind="Text DiscalimerNote2" />
    <gsc.NunitoTextView
        android:id="@+id/DisclaimerText3"
        android:layout_below="@id/DisclaimerText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="left"
        android:textColor="@color/black"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="14dp"        
        android:textSize="14sp"
        android:text="@string/disclaimer3"        
        local:MvxBind="Text DiscalimerNote3"
        />
</RelativeLayout>
