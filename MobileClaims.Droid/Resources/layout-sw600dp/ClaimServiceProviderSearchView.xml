<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background_color">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <gsc.HeaderTextView
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/search"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAllCaps="true" />
        <gsc.TitleTextView
            android:id="@+id/claim_service_provider_select_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_gravity="left"
            android:gravity="left"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="20dp"
            android:textAllCaps="true"
            android:text="@string/claimServiceProviderSelectTitle" />
        <gsc.NunitoTextView
            android:id="@+id/lookupProviderByNameLabel"
            android:text="@string/lookupProviderByNameLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="left"
            android:textSize="18sp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="40dp"
            android:textAllCaps="true" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:weightSum="1">
            <gsc.SmallEditText
                android:id="@+id/lookupProviderByInintialValue"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.3"
                android:layout_centerInParent="true"
                android:textSize="18sp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/dark_grey"
                android:singleLine="true"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/RoundEditTextNone"
                android:layout_marginBottom="10dp"
                android:includeFontPadding="true"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:hint="@string/lookupProviderByInitialLabel"
                local:MvxBind="Text Initial"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentLeft="true"
                android:padding="15dp" />
            <gsc.SmallEditText
                android:id="@+id/lookupProviderByLastNameValue"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.7"
                android:layout_centerInParent="true"
                android:textSize="18sp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/dark_grey"
                android:singleLine="true"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/RoundEditTextNone"
                android:layout_marginBottom="10dp"
                android:includeFontPadding="true"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:hint="@string/lookupProviderByLastNameLabel"
                local:MvxBind="Text LastName"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="60dp"
                android:padding="15dp" />
        </LinearLayout>
        <gsc.GSCButton
            android:text="@string/searchByNameLabel"
            android:background="@drawable/ButtonBackground"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/searchByNameBtn"
            android:layout_gravity="center"
            android:textColor="@drawable/ButtonTextColor"
            android:gravity="center"
            android:textSize="24sp"
            android:layout_marginTop="10dp"
            android:textAllCaps="true" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:id="@+id/linearLayout2">
        <gsc.NunitoTextView
            android:id="@+id/lookupProviderByPhoneLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lookupProviderByPhoneLabel"
            android:layout_gravity="left"
            android:gravity="left"
            android:textSize="18sp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="40dp"
            android:textAllCaps="true" />
        <gsc.SmallEditText
            android:id="@+id/lookupProviderByPhoneValue"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="0"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/dark_grey"
            android:singleLine="true"
            android:layout_gravity="center_vertical"
            android:background="@drawable/RoundEditTextNone"
            android:layout_marginBottom="10dp"
            android:includeFontPadding="true"
            android:layout_marginTop="10dp"
            android:hint="@string/phoneNumberLabel"
            android:gravity="left"
            local:MvxBind="Text PhoneNumber"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="60dp"
            android:padding="15dp" />
        <gsc.GSCButton
            android:text="@string/searchByPhoneLabel"
            android:background="@drawable/ButtonBackground"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/searchByPhoneBtn"
            android:layout_gravity="center"
            android:textColor="@drawable/ButtonTextColor"
            android:gravity="center"
            android:textSize="24sp"
            android:layout_marginTop="10dp"
            android:textAllCaps="true" />
    </LinearLayout>
</LinearLayout>