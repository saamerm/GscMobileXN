<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background_color">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scrollbars="none"
            android:isScrollContainer="true">
            <gsc.HeaderTextView
                android:id="@+id/claim_service_provider_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textAllCaps="true" 
                local:MvxBind="Text Title"/>
            <gsc.TitleTextView
                android:id="@+id/locateProviderMakeSelectionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_gravity="left"
                android:gravity="left"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="20dp"
                android:textAllCaps="true"
                local:MvxBind="Text EnterDetailsLabel"/>
            <gsc.SubtitleTextView
                android:id="@+id/locateProviderMakeSelectionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="left"
                android:gravity="left"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="20dp"
                android:textAllCaps="true"
                local:MvxBind="Text MandatoryFieldsLabel"/>
            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">
                <TableRow
                    android:weightSum="1"
                    android:layout_marginBottom="5dp">
                    <gsc.NunitoTextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:layout_weight="0.5"
                        android:layout_marginRight="0dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="left"
                        android:gravity="center_vertical"
                        local:MvxBind="Text NameLabel"/>
                  <gsc.SmallEditText
                        android:id="@+id/claimServiceProviderEntryNameLabel"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                        android:textSize="18sp"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/dark_grey"
                        android:singleLine="true"
                        android:layout_gravity="center_horizontal"
                        android:includeFontPadding="true"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:maxLength="60"
                        local:MvxBind="Text Name; Background NameValid, Converter=ValidationBooleanToBackground"
                        android:layout_weight="0.5" />
                </TableRow>
                <TableRow
                    android:weightSum="1"
                    android:layout_marginBottom="5dp">
                    <gsc.NunitoTextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:layout_weight="0.5"
                        android:layout_marginRight="0dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="left"
                        android:gravity="center_vertical"
                        local:MvxBind="Text Address1Label"/>
                  <gsc.SmallEditText
                        android:id="@+id/claimServiceProviderEntryAddress1Label"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="0.5"
                        android:layout_centerInParent="true"
                        android:textSize="18sp"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/dark_grey"
                        android:singleLine="true"
                        android:layout_gravity="center_horizontal"
                        android:includeFontPadding="true"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:maxLength="40"
                        local:MvxBind="Text Address1; Background Address1Valid, Converter=ValidationBooleanToBackground" />
                </TableRow>
                <TableRow
                    android:weightSum="1"
                    android:layout_marginBottom="5dp">
                    <gsc.NunitoTextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:layout_weight="0.5"
                        android:layout_marginRight="0dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="left"
                        android:gravity="center_vertical"
                        local:MvxBind="Text Address2Label" />
                    <gsc.SmallEditText
                        android:id="@+id/claimServiceProviderEntryAddress2Label"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="0.5"
                        android:layout_centerInParent="true"
                        android:textSize="18sp"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/dark_grey"
                        android:singleLine="true"
                        android:layout_gravity="center_horizontal"
                        android:includeFontPadding="true"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:maxLength="40"
                        local:MvxBind="Text Address2; Background Address2Valid, Converter=ValidationBooleanToBackground" />
                </TableRow>
                <TableRow
                    android:weightSum="1"
                    android:layout_marginBottom="5dp">
                    <gsc.NunitoTextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:layout_weight="0.5"
                        android:layout_marginRight="0dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="left"
                        android:gravity="center_vertical"
                        local:MvxBind="Text CityLabel" />
                    <gsc.SmallEditText
                        android:id="@+id/claimServiceProviderEntryCityLabel"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="0.5"
                        android:layout_centerInParent="true"
                        android:textSize="18sp"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/dark_grey"
                        android:singleLine="true"
                        android:layout_gravity="center_horizontal"
                        android:includeFontPadding="true"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:maxLength="40"
                        local:MvxBind="Text City; Background CityValid, Converter=ValidationBooleanToBackground" />
                </TableRow>
                <TableRow
                    android:weightSum="1"
                    android:layout_marginBottom="5dp">
                    <gsc.NunitoTextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:layout_weight="0.5"
                        android:layout_marginRight="0dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="left"
                        android:gravity="center_vertical"
                        local:MvxBind="Text ProvinceLabel" />
                    <Mvx.MvxSpinner
                        android:id="@+id/provices"
                        android:layout_width="0dp"
                        android:textSize="18sp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        local:MvxBind="ItemsSource Provinces; SelectedItem SelectedProvince; Background SelectedProvinceValid, Converter=ValidationBooleanToBackground"
                        local:MvxItemTemplate="@layout/item_medical_professional_spinner_txtcentre"
                        local:MvxDropDownItemTemplate="@layout/item_medical_professional_spinner_dropdown_txtcentre"
                        android:gravity="center"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="10dp"
                        android:spinnerMode="dialog" />
                </TableRow>
                <TableRow
                    android:weightSum="1"
                    android:layout_marginBottom="5dp">
                    <gsc.NunitoTextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:textColor="@color/black"
                        android:lines="1"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMaxTextSize="18sp"                        
                        android:textSize="18sp"
                        android:layout_weight="0.5"
                        android:layout_marginRight="0dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="left"
                        android:gravity="center_vertical"
                        local:MvxBind="Text PostalCodeLabelAndroid" />
                    <gsc.SmallEditText
                        android:id="@+id/claimServiceProviderEntryPostalcodeLabel"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="0.5"
                        android:layout_centerInParent="true"
                        android:textSize="18sp"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/dark_grey"
                        android:singleLine="true"
                        android:layout_gravity="center_horizontal"
                        android:includeFontPadding="true"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:maxLength="7"
                        local:MvxBind="Text PostalCode; Background PostalCodeValid, Converter=ValidationBooleanToBackground" />
                </TableRow>
                <TableRow
                    android:weightSum="1"
                    android:layout_marginBottom="5dp">
                    <gsc.NunitoTextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:layout_weight="0.5"
                        android:layout_marginRight="0dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="left"
                        android:gravity="center_vertical"
                        local:MvxBind="Text PhoneLabel" />
                    <gsc.SmallEditText
                        android:id="@+id/claimServiceProviderEntryPhoneLabel"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="0.5"
                        android:layout_centerInParent="true"
                        android:textSize="18sp"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/dark_grey"
                        android:singleLine="true"
                        android:layout_gravity="center_horizontal"
                        android:includeFontPadding="true"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="10"
                        local:MvxBind="Text Phone; Background PhoneValid, Converter=ValidationBooleanToBackground" />
                </TableRow>
                <TableRow
                    android:weightSum="1"
                    android:layout_marginBottom="5dp">
                    <gsc.NunitoTextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:textColor="@color/black"
                        android:lines="1"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMaxTextSize="18sp"                                               
                        android:textSize="18sp"
                        android:layout_weight="0.5"
                        android:layout_marginRight="0dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="left"
                        android:gravity="center_vertical"
                        local:MvxBind="Text RegistrationLabel" />
                    <gsc.SmallEditText
                        android:id="@+id/claimServiceProviderEntryRegistrationLabel"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="0.5"
                        android:layout_centerInParent="true"
                        android:textSize="18sp"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/dark_grey"
                        android:singleLine="true"
                        android:layout_gravity="center_horizontal"
                        android:includeFontPadding="true"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:maxLength="50"
                        local:MvxBind="Text RegistrationNumber; Background RegistrationNumberValid, Converter=ValidationBooleanToBackground" />
                </TableRow>
            </TableLayout>
            <gsc.GSCButton
                android:background="@drawable/ButtonBackground"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:layout_centerHorizontal="true"
                local:MvxBind="Text ButtonLabel; Click UseThisProviderCommand;"
                android:id="@+id/useThisServiceProvider"
                android:layout_gravity="center"
                android:textColor="@drawable/ButtonTextColor"
                android:gravity="center"
                android:textSize="24sp"
                android:textColorHighlight="@color/list_text_color"
                android:textAllCaps="true" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
